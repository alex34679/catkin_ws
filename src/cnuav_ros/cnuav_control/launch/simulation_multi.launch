<?xml version="1.0"?>
<launch>
  <arg name="quad_name_1" default="hummingbird1"/>
  <arg name="quad_name_2" default="hummingbird2"/>
  <arg name="quad_name_3" default="hummingbird3"/>


  <arg name="mav_name_1" default="$(arg quad_name_1)"/>
  <arg name="mav_name_2" default="$(arg quad_name_2)"/>
  <arg name="mav_name_3" default="$(arg quad_name_3)"/>


  <arg name="model1" value="$(find rotors_description)/urdf/mav_generic_odometry_sensor_1.gazebo"/>
  <arg name="model2" value="$(find rotors_description)/urdf/mav_generic_odometry_sensor_2.gazebo"/>
  <arg name="model3" value="$(find rotors_description)/urdf/mav_generic_odometry_sensor_3.gazebo"/>


  <arg name="world_name" default="$(find rotors_gazebo)/worlds/basic.world"/>


  <arg name="x_init_1" default="1.0"/>
  <arg name="y_init_1" default="0.0"/>
  <arg name="x_init_2" default="2.0"/>
  <arg name="y_init_2" default="0.0"/>
  <arg name="x_init_3" default="3.0"/>
  <arg name="y_init_3" default="0.0"/>

  <arg name="enable_logging" default="false" />
  <arg name="enable_ground_truth" default="true" />
  <arg name="enable_command_feedthrough" default="false"/>


  <arg name="log_file_1" default="$(arg mav_name_1)" />
  <arg name="log_file_2" default="$(arg mav_name_2)" />
  <arg name="log_file_3" default="$(arg mav_name_3)" />


  <arg name="paused" value="true"/>
  <arg name="gui" value="true"/>
  <arg name="use_ground_truth" value="true"/>
  <arg name="verbose" default="false"/>
  <arg name="debug" default="false"/>

  <!-- Basic simulation environment !-->
  <include file="$(find cnuav_control)/launch/basics/base_quad_multi.launch">
    <arg name="quad_name_1" value="$(arg quad_name_1)"/>
    <arg name="quad_name_2" value="$(arg quad_name_2)"/>
    <arg name="quad_name_3" value="$(arg quad_name_3)"/>

    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="enable_command_feedthrough" value="$(arg enable_command_feedthrough)" />

    <arg name="mav_name_1" value="$(arg mav_name_1)"/>
    <arg name="mav_name_2" value="$(arg mav_name_2)"/>
    <arg name="mav_name_3" value="$(arg mav_name_3)"/>

    <arg name="model1" value="$(arg model1)"/>
    <arg name="model2" value="$(arg model2)"/>
    <arg name="model3" value="$(arg model3)"/>


    <arg name="enable_logging" value="$(arg enable_logging)"/>
    <arg name="enable_ground_truth" value="$(arg enable_ground_truth)"/>

    <arg name="log_file_1" value="$(arg log_file_1)"/>
    <arg name="log_file_2" value="$(arg log_file_2)"/>
    <arg name="log_file_3" value="$(arg log_file_3)"/>

    <arg name="verbose" default="$(arg verbose)"/>
    <arg name="debug" default="$(arg debug)"/>

    <arg name="x_init_1" value="$(arg x_init_1)"/>
    <arg name="y_init_1" value="$(arg y_init_1)"/>
    <arg name="x_init_2" value="$(arg x_init_2)"/>
    <arg name="y_init_2" value="$(arg y_init_2)"/>
    <arg name="x_init_3" value="$(arg x_init_3)"/>
    <arg name="y_init_3" value="$(arg y_init_3)"/>
  </include>


      <!-- 启动 odometry_visualizer 节点 -->
    <node name="odometry_visualizer" pkg="cnuav_control" type="odometry_visualizer" output="screen" />

    <!-- 启动 RViz -->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find cnuav_control)/rviz/blanck.rviz" output="screen" />

    <!-- 发布 world frame -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="world_to_odom_broadcaster" args="0 0 0 0 0 0 1 world odom" />



</launch>
